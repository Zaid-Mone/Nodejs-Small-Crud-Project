<%- include('../partials/header') -%> 


<%- include('../partials/nav') -%>
<div class="row m-5">
<div class="col-md-6">
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/events">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Show</li>
  </ol>
</nav>

</div> 
<div class=" col-md-6 p-1 m-2 offset-4">
    <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%=event.title%></h5>
          <p class="card-text"><%=event.description%></p>
          <p class="card-text"><%=event.location%></p>
          <p class="card-text"><span class="badge bg-secondary"><%=event.date.toDateString()%></span> </p>

        </div>
        <div class="card-footer" id="DelForm" style="display: flex;justify-content: space-evenly;">
          <% if((user) && user.id == event.user_id) { %>
            <a href="/events/<%=event._id%>/edit" class="btn btn-primary">Edit</a>
            <form action="/events/<%=event._id%>?_method=DELETE" method="POST">
              <button class="btn btn-danger">Delete</button>
            </form>
            <% } %>  

    
            <a href="/events" class="btn btn-outline-primary">Back to Home </a>
        </div>
      </div>
      
</div>

<%- include('../partials/footer') -%> 