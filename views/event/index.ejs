    <div class="row mt-3">
      <%- include('../partials/flashMsgs') -%> 
        <% for (let event of events ) { %>
        <div class=" col-md-4 p-1">
            <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%=event.title%></h5>
                  <p class="card-text"><%=event.description%></p>
