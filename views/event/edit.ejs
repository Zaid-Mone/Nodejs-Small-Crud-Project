<%- include('../partials/header') -%> 

<%- include('../partials/nav') -%> 


<div class="container">
    <div class="row m-5">
        <div class="col-md-6">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a ref="/events/<%=event._id%>">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
          </ol>
        </nav>
    <h1 class="display-4">Edit Event:</h1>
    <hr>
    <%- include('../partials/flashMsgs') -%> 
<form  action="/events/<%=event._id%>?_method=PUT" method="POST" class="mt-4">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" id="tile" class="form-control" value="<%=event.title%>">
    </div>

    <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" rows="4" class="form-control"><%= event.description%></textarea>
        </div>

        <div class="form-group">
                <label for="location">Location</label>
                <input type="text" name="location" id="location" class="form-control" value="<%=event.location%>">
            </div>

            <div class="form-group">
                    <label for="date">Date</label>
                    <input type="date" name="date" id="date" class="form-control" value="<%=eventDate%>">
                </div>


        <div class="form-group mt-1">
            <button type="submit" class="btn btn-primary"> Save</button>
        </div>
</form>
</div>



<%- include('../partials/footer') -%> 